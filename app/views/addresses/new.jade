
extends ../shared/template
block content
  h2 Add a New Address
  .row
    .col-xs-3
      form(role='form', method='post', action='/addresses')
        .form-group
          label(for='name') Name
          input.form-control#name(type='text', name='name', autofocus=true)
        .form-group
          label(for='color') Color
          input.form-control#color(type='color', name='color')
        .form-group
          label(for='twitter') Twitter
          input.form-control#twitter(type='text', name='twitter')
        .form-group
          label(for='facebook') Facebook
          input.form-control#facebook(type='text', name='facebook')
        .form-group
          label(for='address') Address
          input.form-control#address(type='text', name='address')
        button.btn.btn-primary(type='submit') Enter
    .col-xs-9
block scripts
  script(src='/js/user/home.js')

